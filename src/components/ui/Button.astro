---
interface Props {
  href?: string;
  variant?: 'primary' | 'ghost';
  class?: string;
}

const {
  href,
  variant = 'primary',
  class: className = '',
} = Astro.props;

const Tag = href ? 'a' : 'button';

const variantClasses = {
  primary: 'bg-accent text-white dark:text-surface hover:bg-accent/85',
  ghost: 'border border-accent/30 text-accent hover:border-accent hover:bg-accent/5',
};
---

<Tag
  href={href}
  class:list={[
    'inline-flex items-center justify-center px-6 py-2.5 text-sm font-medium rounded-full transition-all duration-200',
    variantClasses[variant],
    className,
  ]}
>
  <slot />
</Tag>
