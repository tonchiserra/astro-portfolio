---
interface Props {
  role: string;
  company: string;
  companyUrl: string;
  period: string;
  location: string;
  description: string;
  highlights: string[];
}

const { role, company, companyUrl, period, location, description, highlights } = Astro.props;
---

<div class="relative pl-6 pb-12 last:pb-0 border-l border-accent/20">
  <div class="absolute left-[-5px] top-1 w-[9px] h-[9px] rounded-full bg-accent"></div>

  <div>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1 mb-1">
      <h3 class="text-lg font-bold tracking-tight">{role}</h3>
      <span class="text-xs font-mono text-accent/70">{period}</span>
    </div>
    <div class="mb-3">
      <a href={companyUrl} target="_blank" rel="noopener noreferrer" class="text-accent text-sm font-medium hover:underline">
        {company}
      </a>
    </div>
    <p class="text-sm text-text-muted leading-relaxed mb-4">{description}</p>
    <ul class="space-y-2">
      {highlights.map((item) => (
        <li class="text-sm text-text-muted flex items-start gap-2.5">
          <span class="w-1.5 h-1.5 rounded-full bg-accent/40 mt-1.5 shrink-0"></span>
          <span>{item}</span>
        </li>
      ))}
    </ul>
  </div>
</div>
