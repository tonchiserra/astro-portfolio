---
interface Props {
  slug: string;
  title: string;
  client: string;
  description: string;
  tags: string[];
  url?: string;
}

const { slug, title, client, description, tags } = Astro.props;
---

<a
  href={`/projects/${slug}`}
  class="group block p-6 rounded-xl border border-border bg-white hover:border-accent/30 hover:-translate-y-1.5 hover:shadow-lg hover:shadow-accent/5 transition-all duration-300"
  transition:name={`project-${slug}`}
>
  <div class="flex items-center justify-between mb-4">
    <span class="text-xs font-medium text-accent">{client}</span>
    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-text-muted/40 group-hover:text-accent transition-colors -translate-x-1 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
    </svg>
  </div>
  <h3 class="text-lg font-bold tracking-tight group-hover:text-accent transition-colors mb-2">
    {title}
  </h3>
  <p class="text-sm text-text-muted leading-relaxed mb-4 line-clamp-2">
    {description}
  </p>
  <div class="flex flex-wrap gap-1.5">
    {tags.slice(0, 3).map((tag) => (
      <span class="text-[11px] px-2.5 py-0.5 rounded-full bg-accent/5 text-accent/70">
        {tag}
      </span>
    ))}
  </div>
</a>
