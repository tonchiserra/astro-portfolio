---
const navLinks = [
  { label: 'Experience', href: '#experience' },
  { label: 'About', href: '#about' },
  { label: 'Skills', href: '#skills' },
  { label: 'Contact', href: '#contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-40 bg-surface/90 backdrop-blur-sm border-b border-border" transition:persist>
  <div class="max-w-5xl mx-auto px-6 flex items-center justify-between h-16">
    <a href="/" class="text-lg font-bold tracking-tight text-accent hover:text-accent/80 transition-colors" data-nav-logo>
      GS
    </a>

    <ul class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <li>
          <a href={link.href} class="text-sm text-text-muted hover:text-accent transition-colors">
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <button class="md:hidden p-2" aria-label="Toggle menu" data-menu-toggle>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
      </svg>
    </button>
  </div>

  <div class="hidden md:hidden bg-surface border-t border-border" data-mobile-menu>
    <ul class="flex flex-col px-6 py-4 gap-4">
      {navLinks.map((link) => (
        <li>
          <a href={link.href} class="block text-sm text-text-muted hover:text-accent transition-colors" data-menu-link>
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  function initNav() {
    const toggle = document.querySelector('[data-menu-toggle]');
    const menu = document.querySelector('[data-mobile-menu]');
    const links = document.querySelectorAll('[data-menu-link]');
    const logo = document.querySelector('[data-nav-logo]');

    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });

    links.forEach((link) => {
      link.addEventListener('click', () => {
        menu?.classList.add('hidden');
      });
    });

    if (!logo) return;
    const logoEl = logo as HTMLElement;
    const fullName = 'Gonzalo Serra';
    let expanded = false;
    let typing = false;

    function typewrite(text: string, el: HTMLElement) {
      typing = true;
      el.textContent = '';
      let i = 0;
      function next() {
        if (i <= text.length) {
          el.textContent = text.substring(0, i);
          i++;
          setTimeout(next, 50);
        } else {
          typing = false;
        }
      }
      next();
    }

    const observer = new IntersectionObserver(
      ([entry]) => {
        if (!entry.isIntersecting && !expanded) {
          expanded = true;
          typewrite(fullName, logoEl);
        } else if (entry.isIntersecting && expanded && !typing) {
          expanded = false;
          logoEl.textContent = 'GS';
        }
      },
      { threshold: 0.1 }
    );

    const hero = document.querySelector('section');
    if (hero) observer.observe(hero);
  }

  initNav();
  document.addEventListener('astro:after-swap', initNav);
</script>
