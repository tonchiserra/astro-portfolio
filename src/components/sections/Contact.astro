---
import SectionHeading from '@components/ui/SectionHeading.astro';
import socialLinks from '@data/social.json';
---

<section id="contact" class="py-24 max-w-5xl mx-auto px-6">
  <SectionHeading title="Contact" number="04" />

  <div class="grid md:grid-cols-2 gap-16" data-animate>
    <div>
      <p class="text-text-muted leading-relaxed mb-8">
        I'm always open to discussing new projects, creative ideas, or opportunities.
        Feel free to reach out.
      </p>
      <div class="space-y-4">
        {socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 text-text-muted hover:text-accent transition-colors group"
          >
            <span class="text-sm font-medium group-hover:text-accent">{link.name}</span>
            <span class="text-xs text-accent/40">&rarr;</span>
            <span class="text-sm text-text-muted/70 group-hover:text-accent truncate">
              {link.url.replace('mailto:', '').replace('https://', '')}
            </span>
          </a>
        ))}
      </div>
    </div>

    <div>
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        class="space-y-5"
      >
        <input type="hidden" name="form-name" value="contact" />

        <div>
          <label for="name" class="block text-sm mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full bg-white border border-border rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-all"
            placeholder="Your name"
          />
        </div>

        <div>
          <label for="email" class="block text-sm mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full bg-white border border-border rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-all"
            placeholder="your@email.com"
          />
        </div>

        <div>
          <label for="message" class="block text-sm mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full bg-white border border-border rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition-all resize-none"
            placeholder="Your message..."
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-accent text-white rounded-lg py-2.5 text-sm font-medium hover:bg-accent/85 transition-colors"
        >
          Send Message
        </button>
      </form>
    </div>
  </div>
</section>
